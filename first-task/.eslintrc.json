{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "@typescript-eslint/semi": [2, "always"],
        "react/react-in-jsx-scope": "off",
        "react/jsx-uses-react": "off",
        "max-len": ["error", {
            "ignoreComments": true,
            "code": 120
        }]
    }
}
